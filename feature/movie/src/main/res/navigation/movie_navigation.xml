<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movie_navigation.xml"
    app:startDestination="@id/movieFragment">

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.efhem.moviegalore.feature.movie.MovieFragment"
        android:label="MovieFragment" >
        <action
            android:id="@+id/action_movieFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>


    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.efhem.moviegalore.feature.movie.detail.MovieDetailsFragment"
        android:label="MovieDetailsFragment" />
</navigation>